<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    >

  <com.android.gamebar.colorpicker.ColorPanelView
      android:id="@+id/gamebar_color_panel_view"
      android:layout_width="@dimen/gamebar_item_size"
      android:layout_height="@dimen/gamebar_item_size"
      android:layout_gravity="center"
      android:clickable="true"
      app:gamebar_colorShape="circle"
      />

  <ImageView
      android:id="@+id/gamebar_color_image_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:clickable="false"
      />

</FrameLayout>